# Email Service Configuration
# Choose one or more options below:

# Option 1: SendGrid (Recommended)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Option 2: Zapier Webhook
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your_webhook_url

# Option 3: Make.com Webhook
MAKE_WEBHOOK_URL=https://hook.us1.make.com/your_webhook_url

# Option 4: Resend (Alternative email service)
RESEND_API_KEY=your_resend_api_key_here

# Google Analytics / Conversion Tracking
GA_MEASUREMENT_ID=G-XXXXXXXXXX
GOOGLE_ADS_CONVERSION_ID=AW-XXXXXXXXX
GOOGLE_ADS_CONVERSION_LABEL=your_conversion_label

# reCAPTCHA (Optional - for spam protection)
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Database (Optional - if you want to store submissions)
DATABASE_URL=your_database_connection_string

# CRM Integration (Optional)
HUBSPOT_API_KEY=your_hubspot_api_key
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
